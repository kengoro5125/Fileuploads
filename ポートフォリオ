                        scope: "情報設計 / コーディング (CMS組込)",
                        tech: ["HTML/SCSS", "JavaScript", "WordPress"],
                        result: "採用エントリー数が前年比200%増。"
                    }
                },
                {
                    id: 3,
                    title: "Automated Dashboard",
                    category: "App UI / GPTs",
                    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&q=80&w=600",
                    description: "社内業務データを可視化するダッシュボードUI。ChatGPT APIを活用した要約機能を搭載。",
                    details: {
                        problem: "日報データの分析に時間がかかっていた。",
                        approach: "必要な数値だけを一目で確認できるカード型UI。自然言語でデータをクエリできるインターフェースを提案。",
                        scope: "UIデザイン / プロトタイピング",
                        tech: ["Figma", "ChatGPT-4o", "React"],
                        result: "管理職のレポート作成時間を週5時間削減。"
                    }
                }
            ];

            /* =========================================
               1. Render Works Grid
               ========================================= */
            const worksGrid = document.querySelector('.works__grid');
            
            worksData.forEach(work => {
                const card = document.createElement('article');
                card.className = 'work-card fade-in-up';
                card.innerHTML = `
                    <div class="work-card__thumb">
                        <img src="${work.image}" alt="${work.title}" loading="lazy">
                    </div>
                    <div class="work-card__body">
                        <div class="work-card__cat">${work.category}</div>
                        <h3 class="work-card__title">${work.title}</h3>
                        <p style="font-size: 0.9rem; color: var(--color-text-sub);">${work.description}</p>
                    </div>
                `;
                card.addEventListener('click', () => openModal(work));
                worksGrid.appendChild(card);
            });

            /* =========================================
               2. Intersection Observer (Fade In)
               ========================================= */
            const observerOptions = {
                root: null,
                rootMargin: '0px 0px -100px 0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.fade-in-up').forEach(el => observer.observe(el));

            /* =========================================
               3. Active Nav Link on Scroll
               ========================================= */
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav__link');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    const sectionHeight = section.clientHeight;
                    if (pageYOffset >= (sectionTop - 200)) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('is-active');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('is-active');
                    }
                });
            });

            /* =========================================
               4. Modal Logic
               ========================================= */
            const modal = document.getElementById('projectModal');
            const modalBody = document.getElementById('modalBody');
            const closeBtn = document.querySelector('.modal__close');

            function openModal(work) {
                // Generate Tech Tags
                const techTags = work.details.tech.map(t => `<span class="skill__tag">${t}</span>`).join('');
                
                modalBody.innerHTML = `
                    <div style="margin-bottom: 1.5rem;">
                        <span style="color:var(--color-primary); font-weight:600; font-size:0.9rem;">${work.category}</span>
                        <h2 style="font-size: 1.75rem; line-height:1.2; margin-top:0.25rem;">${work.title}</h2>
                    </div>
                    <img src="${work.image}" alt="${work.title}" style="width:100%; height:250px; object-fit:cover; border-radius:8px; margin-bottom:1.5rem;">
                    
                    <h4>課題</h4>
                    <p>${work.details.problem}</p>
                    
                    <h4>解決アプローチ</h4>
                    <p>${work.details.approach}</p>
                    
                    <h4>成果</h4>
                    <p>${work.details.result}</p>
                    
                    <h4>担当範囲</h4>
                    <p>${work.details.scope}</p>
                    
                    <h4>使用技術</h4>
                    <div class="modal__tech">${techTags}</div>
                `;
                
                modal.classList.add('is-open');
                modal.setAttribute('aria-hidden', 'false');
                document.body.style.overflow = 'hidden'; // Prevent background scroll
            }

            function closeModal() {
                modal.classList.remove('is-open');
                modal.setAttribute('aria-hidden', 'true');
                document.body.style.overflow = '';
            }

            closeBtn.addEventListener('click', closeModal);
            modal.addEventListener('click', (e) => {
                if (e.target === modal) closeModal();
            });
            
            // Escape key to close
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && modal.classList.contains('is-open')) {
                    closeModal();
                }
            });

            /* =========================================
               5. Form Validation
               ========================================= */
            const form = document.getElementById('contactForm');
            
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                let isValid = true;
                
                // Simple validation loop
                const inputs = form.querySelectorAll('input, textarea');
                inputs.forEach(input => {
                    if (!input.value.trim() || (input.type === 'email' && !input.value.includes('@'))) {
                        input.classList.add('is-invalid');
                        isValid = false;
                    } else {
                        input.classList.remove('is-invalid');
                    }
                });

                if (isValid) {
                    // Show success state (Mock)
                    const originalText = form.querySelector('button').innerText;
                    const btn = form.querySelector('button');
                    btn.innerText = "送信完了しました";
                    btn.style.backgroundColor = "var(--color-primary-dark)";
                    btn.disabled = true;
                    
                    form.reset();
                    
                    setTimeout(() => {
                        btn.innerText = originalText;
                        btn.style.backgroundColor = "";
                        btn.disabled = false;
                        alert('お問い合わせを受け付けました。\n（これはデモです。実際には送信されていません）');
                    }, 2000);
                }
            });
            
            // Real-time validation removal
            form.querySelectorAll('input, textarea').forEach(input => {
                input.addEventListener('input', () => {
                    if (input.classList.contains('is-invalid')) {
                        input.classList.remove('is-invalid');
                    }
                });
            });
        });
    </script>
</body>
</html>
